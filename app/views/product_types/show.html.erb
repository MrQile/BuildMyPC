<% provide(:title,"#{@type.name}") %>

<div class="bg"><%= image_tag("System.jpg", alt: "Graphic Image", class: "slide-image img-responsive")%>
	<div class="jumbotron">
		<h1><%= @type.name %>S</h1>
	</div>
</div>

<div class="container-fluid">
	<div class="row">
		<% if logged_in? %>
			<h2><%= link_to "Create New Products", new_product_path(value: @type.value)%></h2>
		<% end %>
	</div>
</div>


<div class="container-fluid">
	<%= will_paginate @products %>
</div>

<div class="container-fluid">
	<div class="row">
		<% @products.each do |product| %>
			<div class="col-md-6 col-xs-12" id="border-show">
				<div class="col-md-8 col-xs-12">
					<%= image_tag(product.image.url(:standard), class: "image-responsive") %>
					<% if logged_in? %>
						<linc><%= link_to 'Edit', edit_product_path(product, val: "true" ) %></linc>
						<linc><%= link_to 'Delete', product_path(product, val: "true" ) , method: :delete, data: {confirm: "Are You sure?"} %></linc>
					<% end %>
				</div>
				<div class="col-md-4 col-xs-12">
					<name><%= link_to product.name, product_path(product) %></name>
					<h2>â‚¹<%= product.price %>\-</h2>
				</div>
			</div>	
		<%end%>
	</div>
</div>

<div class="container-fluid">
	<%= will_paginate @products %>
</div>
