  <div class="row">
    <div class="home-image"><%= image_tag("homedecoredited.jpg", alt: "Graphic Image")%>
        <p class="inner-text">Get started by browsing thorugh the list of Products we have to offer</p>
        <a href="#Link-to-last" class="btn btn-default inner-button" onClick="window.location='<%=products_path%>';">Products</a>
    </div>
  </div>
  <div class="row">
    <div class="home-image"><%= image_tag("homedecoredited.jpg", alt: "Graphic Image")%>
        <p class="inner-text">Or if you chose to go pick among the Categories</p>
        <a href="#Link-to-last" class="btn btn-default inner-button">Categories</a>
    </div>
  </div>
</div>
</div>